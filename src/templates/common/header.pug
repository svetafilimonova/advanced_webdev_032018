include ../common/socials.pug

mixin header(pageName, header, text, arrow)
    header.header
        .header__row.header__row_top
            .header__row-right
                +socials('socials__icon_white', ['vk','github', 'telegram_logo'], ['https://vk.com/sshvedova2013','https://github.com/svetafilimonova','https://t.me/lana_feels'])
            .header__row-left
                .hamburger-menu
                    .hamburger-btn
        .header__row
            .welcome.header__welcome
                .welcome__pic.header__photo
                div(class= `welcome__info header__info_${pageName}`)
                    div(class= `welcome__info-name welcome__info-name_${pageName}`)=header
                    div(class= `welcome__info-txt welcome__info-txt_${pageName}`)=text
        .header__row
            if arrow
                svg(class="header__arrow-icon" style={width: '27px', height: '18px'})
                    use(class="header__arrow-svg" xlink:href="../assets/images/sprite.svg#arrow_down")